rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function memberDocId(serverId) {
      return serverId + "_" + request.auth.uid;
    }

    function isMember(serverId) {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/serverMembers/$(memberDocId(serverId)));
    }

    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    match /friendRequests/{id} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.fromUid || request.auth.uid == resource.data.toUid);
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.fromUid;
      allow update, delete: if request.auth != null &&
        (request.auth.uid == resource.data.fromUid || request.auth.uid == resource.data.toUid);
    }

    match /notifications/{id} {
      allow read: if request.auth != null && request.auth.uid == resource.data.toUid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.fromUid;
      allow update: if request.auth != null && request.auth.uid == resource.data.toUid;
      allow delete: if false;
    }

    match /messages/{id} {
      allow read: if request.auth != null &&
        request.auth.uid in resource.data.participants;
      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.fromUid &&
        request.auth.uid in request.resource.data.participants;
      allow update: if request.auth != null &&
        request.auth.uid in resource.data.participants;
      allow delete: if false;
    }

    match /servers/{serverId} {
      allow read: if isSignedIn() && isMember(serverId);
      allow create: if isSignedIn()
        && request.auth.uid == request.resource.data.ownerId
        && !exists(/databases/$(database)/documents/userServers/$(request.auth.uid));
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    match /userServers/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow create: if isSignedIn()
        && request.auth.uid == uid
        && !exists(/databases/$(database)/documents/userServers/$(uid));
      allow update, delete: if false;
    }

    match /serverMembers/{memberId} {
      allow read: if isSignedIn()
        && (request.auth.uid == resource.data.userId || isMember(resource.data.serverId));
      allow create: if isSignedIn()
        && request.auth.uid == request.resource.data.userId
        && memberId == request.resource.data.serverId + "_" + request.auth.uid;
      allow update: if isSignedIn()
        && request.auth.uid == resource.data.userId
        && memberId == resource.data.serverId + "_" + request.auth.uid;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    match /serverInvites/{code} {
      allow read: if isSignedIn();
      allow create: if isSignedIn()
        && isMember(request.resource.data.serverId)
        && request.auth.uid == request.resource.data.createdBy;
      allow update, delete: if false;
    }

    match /serverMessages/{id} {
      allow read: if isSignedIn() && isMember(resource.data.serverId);
      allow create: if isSignedIn()
        && request.auth.uid == request.resource.data.userId
        && isMember(request.resource.data.serverId);
      allow update: if isSignedIn()
        && isMember(resource.data.serverId)
        && request.resource.data.diff(resource.data).changedKeys().hasOnly(["readBy"]);
      allow delete: if false;
    }

    match /serverPresence/{presenceId} {
      allow read, write: if false;
    }

    match /voiceSettings/{uid} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
    }

    match /userSettings/{uid} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSignedIn() && request.auth.uid == uid;
    }
  }
}
